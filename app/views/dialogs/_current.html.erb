<div class="relative rounded-lg bg-white shadow p-4">
  <% unless dialog.unread_messages_count.zero? %>
    <%= render "dialogs/read_counter", dialog: dialog, element_class: "read_counter--show" %>
  <% end %>
  <div class="grid grid-cols-2 divide-x">
    <div class="flex flex-col">
      <div class="text-xs text-gray-400">Recipient</div>
      <div class="text-sm text-gray-600"><%= dialog.recipient_phone_number.number %></div>
    </div>
    <div class="flex flex-col pl-4 text-right">
      <div class="text-xs text-gray-400">Your phone number</div>
      <div class="text-sm text-gray-600">
        <%= dialog.user_phone_number.name.truncate(34) %> <span class="text-xs text-gray-500">(<%= dialog.user_phone_number.number %>)</span>
      </div>
    </div>
  </div>
</div>
