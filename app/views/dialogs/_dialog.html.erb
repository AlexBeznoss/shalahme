<% current ||= false %>

<li class="py-4 px-6 <%= current ? "" : "border-b border-gray-200" %>">
  <div class="flex items-center space-x-4">
    <div class="flex-1 min-w-0">
      <p class="text-sm font-medium text-gray-900 truncate">To: <%= dialog.recipient_phone_number.number %></p>
      <p class="text-sm font-medium text-gray-900 truncate">
        From: <%= dialog.user_phone_number.name %>
      </p>
      <p class="text-xs text-gray-500 truncate">
        <%= dialog.user_phone_number.number %>
      </p>
    </div>
    <div>
      <%= link_to "View",
        convo_path(dialog),
        class: "inline-flex items-center shadow-sm px-2.5 py-0.5 border border-gray-300 text-sm leading-5 font-medium rounded-full text-gray-700 bg-white hover:bg-gray-50",
        data: { 'turbo-frame': "_top" } unless current %>
    </div>
  </div>
</li>
