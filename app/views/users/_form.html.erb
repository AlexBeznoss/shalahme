<%= form_with model: user, url: user_path(user), class: "flex items-center px-4 py-4 sm:px-6" do |f| %>
  <div class="min-w-0 flex-1 flex items-center">
    <div class="relative border border-gray-300 rounded-md px-3 py-2 shadow-sm focus-within:ring-1 focus-within:ring-indigo-600 focus-within:border-indigo-600">
      <%= f.label :role, class: "absolute -top-2 left-2 -mt-px inline-block px-1 bg-white text-xs font-medium text-gray-900" %>
      <%= f.select :role, User.roles.keys, class: "mt-1 block w-full text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 rounded-md" %>
    </div>
    <div class="ml-3">
      <%= f.submit 'Update', class: "button--primary" %>
      <%= link_to 'Cancel', users_path, class: 'button--default' %>
    </div>
  </div>
<% end %>
